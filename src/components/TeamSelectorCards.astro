---
import { getAllTeams } from '../services/teams.js'
const teams = await getAllTeams()
---
<section class='grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8'>
	{
		teams.map((team) => {
			const { id, name, color, imageWhite } = team
			return (
				<article class='col-span-1 rounded aspect-video overflow-hidden'>
					<a
						class='group transition-all hover:scale-110 flex h-full items-center justify-center relative gap-4 p-4 bg-gradient-to-tr from-gray-600 to-gray-900'
						style={`--tw-gradient-from: ${color}`}
						href={`/team/${id}`}
						title={`Ver equipo ${name}`}
					>
						<img class='z-10 w-24 h-24 group-hover:scale-110 transition-all' src={imageWhite} />
						<h3 class='z-10 font-title text-white text-md md:text-xl xl:text-2xl'>{name}</h3>
						<div
							class={`z-0 absolute opacity-10 inset-0 bg-center bg-[size:150%] transition-all group-hover:bg-[size:200%]`}
							style={`background-image: url('${imageWhite}')`}
						></div>
					</a>
				</article>
			)
		})
	}
</section>
